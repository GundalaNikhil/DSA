{
  "problem": "Longest Palindromic Substring",
  "function_name": "longest_palindrome",
  "test_cases": [
    {
      "id": 1,
      "description": "bab or aba in babad",
      "input": {"text": "babad"},
      "expected_output": "bab",
      "category": "base_case"
    },
    {
      "id": 2,
      "description": "bb in cbbd",
      "input": {"text": "cbbd"},
      "expected_output": "bb",
      "category": "base_case"
    },
    {
      "id": 3,
      "description": "Single character",
      "input": {"text": "a"},
      "expected_output": "a",
      "category": "corner_case"
    },
    {
      "id": 4,
      "description": "Entire string is palindrome",
      "input": {"text": "racecar"},
      "expected_output": "racecar",
      "category": "base_case"
    },
    {
      "id": 5,
      "description": "Two same characters",
      "input": {"text": "aa"},
      "expected_output": "aa",
      "category": "corner_case"
    },
    {
      "id": 6,
      "description": "Two different characters",
      "input": {"text": "ab"},
      "expected_output": "a",
      "category": "corner_case"
    },
    {
      "id": 7,
      "description": "All same characters",
      "input": {"text": "aaaa"},
      "expected_output": "aaaa",
      "category": "edge_case"
    },
    {
      "id": 8,
      "description": "Palindrome at end",
      "input": {"text": "xyzaba"},
      "expected_output": "aba",
      "category": "base_case"
    },
    {
      "id": 9,
      "description": "Palindrome at beginning",
      "input": {"text": "abaxyz"},
      "expected_output": "aba",
      "category": "base_case"
    },
    {
      "id": 10,
      "description": "Even length palindrome",
      "input": {"text": "abba"},
      "expected_output": "abba",
      "category": "base_case"
    },
    {
      "id": 11,
      "description": "No repeating chars",
      "input": {"text": "abcde"},
      "expected_output": "a",
      "category": "edge_case"
    },
    {
      "id": 12,
      "description": "Long palindrome in middle",
      "input": {"text": "xabcbay"},
      "expected_output": "abcba",
      "category": "stress_test"
    },
    {
      "id": 13,
      "description": "Multiple same length",
      "input": {"text": "abacab"},
      "expected_output": "bacab",
      "category": "base_case"
    },
    {
      "id": 14,
      "description": "Level is palindrome",
      "input": {"text": "level"},
      "expected_output": "level",
      "category": "base_case"
    },
    {
      "id": 15,
      "description": "Noon in afternoon",
      "input": {"text": "afternoon"},
      "expected_output": "noon",
      "category": "large_case"
    }
  ]
}
