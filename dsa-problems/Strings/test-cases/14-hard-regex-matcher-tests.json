{
  "problem": "Simple Regex Matcher",
  "function_name": "is_match",
  "test_cases": [
    {
      "id": 1,
      "description": "aa does not match a",
      "input": {"text": "aa", "pattern": "a"},
      "expected_output": false,
      "category": "base_case"
    },
    {
      "id": 2,
      "description": "aa matches a*",
      "input": {"text": "aa", "pattern": "a*"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 3,
      "description": "ab matches .*",
      "input": {"text": "ab", "pattern": ".*"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 4,
      "description": "mississippi vs mis*is*p*.",
      "input": {"text": "mississippi", "pattern": "mis*is*p*."},
      "expected_output": false,
      "category": "base_case"
    },
    {
      "id": 5,
      "description": "aab matches c*a*b",
      "input": {"text": "aab", "pattern": "c*a*b"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 6,
      "description": "Exact match",
      "input": {"text": "abc", "pattern": "abc"},
      "expected_output": true,
      "category": "corner_case"
    },
    {
      "id": 7,
      "description": "Single char match with dot",
      "input": {"text": "a", "pattern": "."},
      "expected_output": true,
      "category": "corner_case"
    },
    {
      "id": 8,
      "description": "Empty pattern with star",
      "input": {"text": "", "pattern": "a*"},
      "expected_output": true,
      "category": "edge_case"
    },
    {
      "id": 9,
      "description": "Star matches zero",
      "input": {"text": "ab", "pattern": "a*ab"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 10,
      "description": "Multiple stars",
      "input": {"text": "aaa", "pattern": "a*a*a*"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 11,
      "description": "Dot star at end",
      "input": {"text": "abcdef", "pattern": "abc.*"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 12,
      "description": "Complex pattern",
      "input": {"text": "aaa", "pattern": "ab*a*c*a"},
      "expected_output": true,
      "category": "stress_test"
    },
    {
      "id": 13,
      "description": "No match with dots",
      "input": {"text": "ab", "pattern": "..."},
      "expected_output": false,
      "category": "edge_case"
    },
    {
      "id": 14,
      "description": "Star on dot",
      "input": {"text": "abcd", "pattern": ".*d"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 15,
      "description": "Long matching case",
      "input": {"text": "aaabbbccc", "pattern": "a*b*c*"},
      "expected_output": true,
      "category": "large_case"
    }
  ]
}
