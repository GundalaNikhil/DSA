{
  "problem": "Word Break Validator",
  "function_name": "can_segment_string",
  "test_cases": [
    {
      "id": 1,
      "description": "leetcode = leet + code",
      "input": {"text": "leetcode", "dictionary": ["leet", "code"]},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 2,
      "description": "applepenapple = apple + pen + apple",
      "input": {"text": "applepenapple", "dictionary": ["apple", "pen"]},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 3,
      "description": "catsandog cannot be segmented",
      "input": {"text": "catsandog", "dictionary": ["cats", "dog", "sand", "and", "cat"]},
      "expected_output": false,
      "category": "base_case"
    },
    {
      "id": 4,
      "description": "cars = ca + rs",
      "input": {"text": "cars", "dictionary": ["car", "ca", "rs"]},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 5,
      "description": "Single word match",
      "input": {"text": "hello", "dictionary": ["hello"]},
      "expected_output": true,
      "category": "corner_case"
    },
    {
      "id": 6,
      "description": "Word not in dictionary",
      "input": {"text": "hello", "dictionary": ["world"]},
      "expected_output": false,
      "category": "edge_case"
    },
    {
      "id": 7,
      "description": "Empty dictionary",
      "input": {"text": "abc", "dictionary": []},
      "expected_output": false,
      "category": "edge_case"
    },
    {
      "id": 8,
      "description": "Single character words",
      "input": {"text": "abc", "dictionary": ["a", "b", "c"]},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 9,
      "description": "Repeated word usage",
      "input": {"text": "aaaa", "dictionary": ["a", "aa"]},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 10,
      "description": "catscatscat",
      "input": {"text": "catscatscat", "dictionary": ["cat", "cats"]},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 11,
      "description": "Almost matches",
      "input": {"text": "abcd", "dictionary": ["abc", "bcd"]},
      "expected_output": false,
      "category": "edge_case"
    },
    {
      "id": 12,
      "description": "Prefix problem",
      "input": {"text": "aaaaaab", "dictionary": ["a", "aa", "aaa", "aaaa"]},
      "expected_output": false,
      "category": "stress_test"
    },
    {
      "id": 13,
      "description": "goalspecial",
      "input": {"text": "goalspecial", "dictionary": ["go", "goal", "special", "als"]},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 14,
      "description": "Overlapping options",
      "input": {"text": "pineapple", "dictionary": ["pine", "pineapple", "apple"]},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 15,
      "description": "Long segmentation",
      "input": {"text": "ilovecoding", "dictionary": ["i", "love", "coding", "code"]},
      "expected_output": true,
      "category": "large_case"
    }
  ]
}
