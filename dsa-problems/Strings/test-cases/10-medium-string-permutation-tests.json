{
  "problem": "String Permutation Detector",
  "function_name": "has_permutation_substring",
  "test_cases": [
    {
      "id": 1,
      "description": "ba is permutation of ab in eidbaooo",
      "input": {"text": "eidbaooo", "pattern": "ab"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 2,
      "description": "No permutation of ab in eidboaoo",
      "input": {"text": "eidboaoo", "pattern": "ab"},
      "expected_output": false,
      "category": "base_case"
    },
    {
      "id": 3,
      "description": "ell exists in hello",
      "input": {"text": "hello", "pattern": "ell"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 4,
      "description": "gram in programming",
      "input": {"text": "programming", "pattern": "gram"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 5,
      "description": "Single char match",
      "input": {"text": "abc", "pattern": "a"},
      "expected_output": true,
      "category": "corner_case"
    },
    {
      "id": 6,
      "description": "Single char no match",
      "input": {"text": "abc", "pattern": "d"},
      "expected_output": false,
      "category": "corner_case"
    },
    {
      "id": 7,
      "description": "Pattern equals text",
      "input": {"text": "abc", "pattern": "abc"},
      "expected_output": true,
      "category": "edge_case"
    },
    {
      "id": 8,
      "description": "Pattern is permutation of entire text",
      "input": {"text": "abc", "pattern": "cba"},
      "expected_output": true,
      "category": "edge_case"
    },
    {
      "id": 9,
      "description": "ooo is not in ab",
      "input": {"text": "ab", "pattern": "ooo"},
      "expected_output": false,
      "category": "edge_case"
    },
    {
      "id": 10,
      "description": "adc permutation (cda) in abcda",
      "input": {"text": "abcda", "pattern": "adc"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 11,
      "description": "xyz not in abc",
      "input": {"text": "abc", "pattern": "xyz"},
      "expected_output": false,
      "category": "base_case"
    },
    {
      "id": 12,
      "description": "aa in aab",
      "input": {"text": "aab", "pattern": "aa"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 13,
      "description": "Long text with permutation",
      "input": {"text": "abcdefghijklmn", "pattern": "fed"},
      "expected_output": true,
      "category": "stress_test"
    },
    {
      "id": 14,
      "description": "All same characters",
      "input": {"text": "aaaa", "pattern": "aa"},
      "expected_output": true,
      "category": "edge_case"
    },
    {
      "id": 15,
      "description": "Complex permutation check",
      "input": {"text": "abcdefgh", "pattern": "hgf"},
      "expected_output": true,
      "category": "large_case"
    }
  ]
}
