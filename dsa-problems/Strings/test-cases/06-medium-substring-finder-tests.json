{
  "problem": "Unique Substring Finder",
  "function_name": "longest_unique_substring",
  "test_cases": [
    {
      "id": 1,
      "description": "abcabcbb → 3 (abc)",
      "input": {"text": "abcabcbb"},
      "expected_output": 3,
      "category": "base_case"
    },
    {
      "id": 2,
      "description": "bbbbb → 1 (b)",
      "input": {"text": "bbbbb"},
      "expected_output": 1,
      "category": "base_case"
    },
    {
      "id": 3,
      "description": "pwwkew → 3 (wke)",
      "input": {"text": "pwwkew"},
      "expected_output": 3,
      "category": "base_case"
    },
    {
      "id": 4,
      "description": "abcdef → 6 (all unique)",
      "input": {"text": "abcdef"},
      "expected_output": 6,
      "category": "base_case"
    },
    {
      "id": 5,
      "description": "Single character",
      "input": {"text": "a"},
      "expected_output": 1,
      "category": "corner_case"
    },
    {
      "id": 6,
      "description": "Two same characters",
      "input": {"text": "aa"},
      "expected_output": 1,
      "category": "corner_case"
    },
    {
      "id": 7,
      "description": "Two different characters",
      "input": {"text": "ab"},
      "expected_output": 2,
      "category": "corner_case"
    },
    {
      "id": 8,
      "description": "dvdf → 3 (vdf)",
      "input": {"text": "dvdf"},
      "expected_output": 3,
      "category": "base_case"
    },
    {
      "id": 9,
      "description": "anviaj → 5 (nviaj)",
      "input": {"text": "anviaj"},
      "expected_output": 5,
      "category": "base_case"
    },
    {
      "id": 10,
      "description": "All same 10 chars",
      "input": {"text": "aaaaaaaaaa"},
      "expected_output": 1,
      "category": "edge_case"
    },
    {
      "id": 11,
      "description": "Alternating ab",
      "input": {"text": "ababababab"},
      "expected_output": 2,
      "category": "base_case"
    },
    {
      "id": 12,
      "description": "Long unique",
      "input": {"text": "abcdefghij"},
      "expected_output": 10,
      "category": "boundary"
    },
    {
      "id": 13,
      "description": "tmmzuxt → 5 (mzuxt)",
      "input": {"text": "tmmzuxt"},
      "expected_output": 5,
      "category": "base_case"
    },
    {
      "id": 14,
      "description": "Empty-like single",
      "input": {"text": "z"},
      "expected_output": 1,
      "category": "corner_case"
    },
    {
      "id": 15,
      "description": "Long with repeats",
      "input": {"text": "abcdefabcdefgh"},
      "expected_output": 8,
      "category": "stress_test"
    }
  ]
}
