{
  "problem": "Balanced Bracket Validator",
  "function_name": "is_valid_brackets",
  "test_cases": [
    {
      "id": 1,
      "description": "Simple parentheses",
      "input": {"code": "()"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 2,
      "description": "All bracket types",
      "input": {"code": "()[]{}"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 3,
      "description": "Mismatched types",
      "input": {"code": "(]"},
      "expected_output": false,
      "category": "base_case"
    },
    {
      "id": 4,
      "description": "Properly nested",
      "input": {"code": "([{}])"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 5,
      "description": "Unmatched opening",
      "input": {"code": "((("},
      "expected_output": false,
      "category": "edge_case"
    },
    {
      "id": 6,
      "description": "Unmatched closing",
      "input": {"code": ")))"},
      "expected_output": false,
      "category": "edge_case"
    },
    {
      "id": 7,
      "description": "Single opening",
      "input": {"code": "("},
      "expected_output": false,
      "category": "corner_case"
    },
    {
      "id": 8,
      "description": "Single closing",
      "input": {"code": ")"},
      "expected_output": false,
      "category": "corner_case"
    },
    {
      "id": 9,
      "description": "Complex nested",
      "input": {"code": "{[()]}"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 10,
      "description": "Wrong nesting order",
      "input": {"code": "([)]"},
      "expected_output": false,
      "category": "base_case"
    },
    {
      "id": 11,
      "description": "Empty-like (two chars)",
      "input": {"code": "[]"},
      "expected_output": true,
      "category": "base_case"
    },
    {
      "id": 12,
      "description": "Long balanced",
      "input": {"code": "(((())))"},
      "expected_output": true,
      "category": "boundary"
    },
    {
      "id": 13,
      "description": "Long unbalanced",
      "input": {"code": "(((()))"},
      "expected_output": false,
      "category": "boundary"
    },
    {
      "id": 14,
      "description": "Mixed types balanced",
      "input": {"code": "[{()}](){}"},
      "expected_output": true,
      "category": "stress_test"
    },
    {
      "id": 15,
      "description": "Closing before opening",
      "input": {"code": ")("},
      "expected_output": false,
      "category": "edge_case"
    }
  ]
}
