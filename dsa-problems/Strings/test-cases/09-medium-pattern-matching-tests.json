{
  "problem": "Pattern Matching Counter",
  "function_name": "count_pattern_matches",
  "test_cases": [
    {
      "id": 1,
      "description": "ACGT appears 3 times",
      "input": {"sequence": "ACGTACGTACGT", "pattern": "ACGT"},
      "expected_output": 3,
      "category": "base_case"
    },
    {
      "id": 2,
      "description": "Overlapping AA matches",
      "input": {"sequence": "AAAA", "pattern": "AA"},
      "expected_output": 3,
      "category": "base_case"
    },
    {
      "id": 3,
      "description": "Pattern not found",
      "input": {"sequence": "ACGT", "pattern": "TT"},
      "expected_output": 0,
      "category": "edge_case"
    },
    {
      "id": 4,
      "description": "ATCG appears 3 times",
      "input": {"sequence": "ATCGATCGATCG", "pattern": "ATCG"},
      "expected_output": 3,
      "category": "base_case"
    },
    {
      "id": 5,
      "description": "Single char pattern",
      "input": {"sequence": "AAAA", "pattern": "A"},
      "expected_output": 4,
      "category": "base_case"
    },
    {
      "id": 6,
      "description": "Pattern equals sequence",
      "input": {"sequence": "ACG", "pattern": "ACG"},
      "expected_output": 1,
      "category": "corner_case"
    },
    {
      "id": 7,
      "description": "Pattern longer than any match",
      "input": {"sequence": "AC", "pattern": "ACG"},
      "expected_output": 0,
      "category": "edge_case"
    },
    {
      "id": 8,
      "description": "Overlapping AAA",
      "input": {"sequence": "AAAAA", "pattern": "AAA"},
      "expected_output": 3,
      "category": "base_case"
    },
    {
      "id": 9,
      "description": "No matches in different sequence",
      "input": {"sequence": "TTTTTT", "pattern": "AC"},
      "expected_output": 0,
      "category": "base_case"
    },
    {
      "id": 10,
      "description": "Pattern at beginning only",
      "input": {"sequence": "ACGTTTT", "pattern": "ACG"},
      "expected_output": 1,
      "category": "base_case"
    },
    {
      "id": 11,
      "description": "Pattern at end only",
      "input": {"sequence": "TTTTACG", "pattern": "ACG"},
      "expected_output": 1,
      "category": "base_case"
    },
    {
      "id": 12,
      "description": "Multiple GC patterns",
      "input": {"sequence": "GCGCGCGC", "pattern": "GC"},
      "expected_output": 4,
      "category": "stress_test"
    },
    {
      "id": 13,
      "description": "Long overlapping pattern",
      "input": {"sequence": "ATATAT", "pattern": "ATA"},
      "expected_output": 2,
      "category": "base_case"
    },
    {
      "id": 14,
      "description": "Single occurrence",
      "input": {"sequence": "ACGTACGT", "pattern": "GTAC"},
      "expected_output": 1,
      "category": "base_case"
    },
    {
      "id": 15,
      "description": "Complex pattern",
      "input": {"sequence": "ACACACACA", "pattern": "ACAC"},
      "expected_output": 2,
      "category": "large_case"
    }
  ]
}
